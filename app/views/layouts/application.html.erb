<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <style media="screen">
    .navbar-transparent li a {
    color: white;
  }
  .navbar-transparent li a:hover {
    color: black;
  }
  .navbar-transparent li a:active {
    color: black;
  }
  #brandLogo
  {
    color:white;
  }
  #brandLogo:hover
  {
      color:orange;
  }
  #searchButton
  {
    color:white;
    background-color:transparent;
  }
  #searchButton:hover
  {
    color:orange;
    background-color:transparent;
  }
  .navbar-toggle .icon-bar
  {
    background-color: white;
  }
  #contactButton
  {
    color:black;
    background-color:orange;
  }
  #contactButton:hover
  {
    color:gray;
    background-color:orange;
  }
  #emailButton
  {
    color:black;
    background-color:orange;
  }
  #emailButton:hover
  {
    color:gray;
    background-color:orange;
  }
  #addressButton
  {
    color:black;
    background-color:orange;
  }
  #addressButton:hover
  {
    color:gray;
    background-color:orange;
  }
  #signUpButton
  {
    color:black;
    background-color:orange;
  }
  #signUpButton:hover
  {
    color:white;
    background-color:orange;
  }
  .standardButton
  {
    color:black;
    background-color:orange;
  }
  .standardButton:hover
  {
    color:white !important;
    background-color:orange;
  }
  .buttonLink
  {
    color: black !important;
    text-decoration: none;
  }
  .buttonLink:hover
  {
    color: blue !important;
    text-decoration: none;
  }

  </style>
  <!-- The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags -->
  <title>SocialCloud</title>

  <!-- Bootstrap -->
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">

  <!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
  <!-- Include all compiled plugins (below), or include individual files as needed -->
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>
  <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
  <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
  <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
  <![endif]-->
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body background="/seamless1.jpg" style="background-size: 150px 150px;">

  <nav class="navbar navbar-transparent" >
    <div class="container-fluid">
      <!-- Brand and toggle get grouped for better mobile display -->
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <a class="navbar-brand" id="brandLogo" href="<%= root_path %>">SocialCloud<span class="glyphicon glyphicon-cloud" aria-hidden="true"></span></a>
      </div>

      <!-- Collect the nav links, forms, and other content for toggling -->
      <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
        <ul class="nav navbar-nav">
          <% if user_signed_in? %>
            <li class="active" style="color:white;"><a href="<%= users_path %>"><strong>Hi <%= current_user.name %> !</strong><span class="sr-only">(current)</span></a></li>
          <% else %>
            <li class="active" style="color:white;"><a href="<%= new_user_session_path %>">Login <span class="sr-only">(current)</span></a></li>
            <li><a href="<%= new_user_registration_path %>">Sign Up</a></li>
          <% end %>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Options <span class="caret"></span></a>
            <ul class="dropdown-menu">
              <% if user_signed_in? %>
                <li><a href="<%= users_path %>">Your Profile</a></li>
              <% end %>
              <li><a href="#">Another action</a></li>
              <li><a href="#">Something else here</a></li>
              <% if user_signed_in? %>
                <li role="separator" class="divider"></li>
                <li><a href="<%= edit_user_registration_path %>">Edit Profile</a></li>
                <li role="separator" class="divider"></li>
                <li><a href="<%= destroy_user_session_path %>">Logout</a></li>
              <% end %>
            </ul>
          </li>
        </ul>

        <%= form_for :user,  url: search_path, html: { class:"navbar-form navbar-left" } do |f| %>
          <div class="form-group">
            <input type="text" name="searchQuery" class="form-control" placeholder="Type user name here">
          </div>
          <button type="submit" id="searchButton" class="btn btn-default" >Search &nbsp<span class="glyphicon glyphicon-search" aria-hidden="true"></span></button>

        <% end %>
        <ul class="nav navbar-nav navbar-right">
          <% if user_signed_in? %>
            <li><a href="#">Logged in as <strong><%= current_user.email %></strong>.</a></li>
            <% end %>
          <li><a href="<%= contact_us_path %>">Contact Us</a></li>
        </ul>
      </div>
    </div>
  </nav>

  <% if notice %>
    <p class="alert alert-success"><%= notice %></p>
  <% end %>
  <% if alert %>
    <p class="alert alert-danger"><%= alert %></p>
  <% end %>

<%= yield %>
</body>
</html>
