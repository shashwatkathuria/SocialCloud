<div class="jumbotron" style="padding:10%;padding-top:1%;margin:10%;margin-top:0%;margin-bottom:0%;background:rgba(255,255,255,0.6);">

<h2>Forgot your password?</h2>
<hr>
<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
    <br>
  </div>

  <div class="actions">
    <%= f.submit "Send me reset password instructions", class: "btn center-block standardButton" %>
  </div>
<% end %>

<strong><%= render "devise/shared/links" %></strong>

</div>
