<div class="jumbotron" style="padding:10%;padding-top:1%;margin:10%;margin-top:0%;margin-bottom:0%;background:rgba(255,255,255,0.6);">

<div class="page-header" style="margin-top:0;text-align:center;">
  <h2><span class="glyphicon glyphicon-log-in" aria-hidden="true"></span> Login</h2>
</div>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label :login %><br />
    <%= f.text_field :login, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "Enter Username or Email Address" %>
  </div>

  <div class="field">
    <%= f.label :password %><br />
    <%= f.password_field :password, autocomplete: "current-password", class: "form-control", placeholder: "Enter Password" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Login", class: "btn center-block standardButton" %>
  </div>
<% end %>

<strong><%= render "devise/shared/links" %></strong>
</div>
