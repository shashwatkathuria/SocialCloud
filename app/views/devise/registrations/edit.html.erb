<div class="jumbotron" style="padding:10%;padding-top:1%;margin:10%;margin-top:0%;margin-bottom:0%;background:rgba(255,255,255,0.6);">

<div class="page-header" style="margin-top:0;text-align:center;">
  <h2><span class="glyphicon glyphicon-edit" aria-hidden="true"></span>Edit Profile</h2>
</div>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <span class="glyphicon glyphicon-user" aria-hidden="true"></span>
    <%= f.label :first_name, "First Name" %><br />
    <%= f.text_field :first_name, autocomplete: "first-name", class: "form-control", placeholder: "First Name" %>
  </div>

  <div class="field">
    <span class="glyphicon glyphicon-user" aria-hidden="true"></span>
    <%= f.label :last_name, "Last Name" %><br />
    <%= f.text_field :last_name, autocomplete: "last-name", class: "form-control", placeholder: "Last Name" %>
  </div>

  <div class="field">
    <span class="glyphicon glyphicon-earphone" aria-hidden="true"></span>
    <%= f.label :phone %><br />
    <%= f.telephone_field :phone, autofocus: true, autocomplete: "phone", class: "form-control", placeholder:"Enter Phone Number" %>
  </div>

  <div class="field">
    <span class="glyphicon glyphicon-user" aria-hidden="true"></span>
    <%= f.label :username %><br />
    <%= f.text_field :username, autofocus: true, autocomplete: "username", class: "form-control", placeholder:"Enter User Name" %>
  </div>

  <div class="field">
    <span class="glyphicon glyphicon-envelope" aria-hidden="true"></span>
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    <span class="glyphicon glyphicon-lock" aria-hidden="true"></span>
    <%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
    <%= f.password_field :password, autocomplete: "new-password", class: "form-control", placeholder: "Enter New Password" %>
    <% if @minimum_password_length %>
      <em><%= @minimum_password_length %> characters minimum</em>
    <% end %>
  </div>

  <div class="field">
    <span class="glyphicon glyphicon-lock" aria-hidden="true"></span>
    <%= f.label :password_confirmation, "Confirm Password" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", placeholder: "Enter New Password Again" %>
  </div>

  <div class="field">
    <span class="glyphicon glyphicon-lock" aria-hidden="true"></span>
    <%= f.label :current_password, "Current Password" %> <i>(we need your current password to confirm your changes)</i><br />
    <%= f.password_field :current_password, autocomplete: "current-password", class: "form-control", placeholder: "Enter Current Password" %>
    <br/>
  </div>

  <div class="actions">
    <div class="text-center col-md-4 col-md-offset-4">
      <label class="btn btn-default standardButton center-block">
        <span class="glyphicon glyphicon-save" aria-hidden="true"></span> Update Profile <%= f.submit hidden: 'hidden' %>
      </label>
    </div>
  </div>

<% end %>
<br>
<br>
<hr>

<p><%= link_to raw("<span class=\"glyphicon glyphicon-remove-circle\" aria-hidden=\"true\"></span>") + " Unhappy? Delete Account",
          registration_path(resource_name),
          data: { confirm: "Are you sure?" },
          method: :delete,
          class: "btn standardButton"
           %></p>

<strong><%= link_to "Back", :back, class: "navbar-link" %></strong>
</div>
