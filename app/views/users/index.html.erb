<div class="jumbotron" style="padding:10%;padding-top:1%;margin:10%;margin-top:0%;margin-bottom:0%;background:rgba(255,255,255,0.6);">

  <% if current_user %>
    <div class="page-header">
    <h2>Hi <%= current_user.name %>&nbsp<small>Your information is displayed below.</small></h2>
    </div>

    <div class="jumbotron" style="color:white;padding:5%;margin-top:0%;margin-bottom:0%;background:rgba(0,0,0,0.6);">
      <h3>Name : <%= current_user.name %></h3>
      <p>Phone : <%= current_user.phone %></p>
      <p>Email : <%= current_user.email %></p>
    </div>
  <% else %>
    <br>
    <div class="alert alert-danger" style="text-align:center" role="alert">An error occured. Please login again.</div>

  <% end %>

</div>
