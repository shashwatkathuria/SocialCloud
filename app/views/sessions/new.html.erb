<div class="jumbotron" style="padding-top:1%;margin:10%;margin-top:0%;margin-bottom:0%;background:rgba(255,255,255,0.6);">
    <div class="loginForm" style = "padding:25%;padding-top:0%;padding-bottom:0%">
        <div class="page-header">
        <h2>Login &nbsp<small>Please enter your email and password.</small></h2>
        </div>
        <%= form_tag '/login', method: :post, html: {class:"form-group"} do %>
           <div>
              <%= label_tag :email %>
              <%= text_field_tag :email,"", class: "form-control"%>
           </div>
           <div>
              <%= label_tag :password %>
              <%= password_field_tag :password, "", class: "form-control" %>
           </div>
           <br>
          <%= submit_tag 'Submit', class: "btn btn-default center-block"  %>
        <%end%>
    </div>
</div>
