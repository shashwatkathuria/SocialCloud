<div class="jumbotron" style="padding:10%;padding-top:1%;margin:10%;margin-top:0%;margin-bottom:0%;background:rgba(255,255,255,0.6);">

  <div class="page-header" style="margin-top:0;text-align:center;">
      <h2>Your Posts</h2>
      <h2><small>All of your posts are displayed below.</small></h2>
      <div class="container center_div">
        <%= form_for :post,  url: posts_search_path, html: { class:"navbar-form navbar-left" } do |f| %>
          <div class="form-group" style="text-align:center;">
            <input type="text" name="searchQuery" class="form-control" placeholder="Search Post">
          </div>
          <button type="submit" class="btn standardButton btn-default" >Search &nbsp<span class="glyphicon glyphicon-search" aria-hidden="true"></span></button>
        <% end %>
      </div>
  </div>




  <% if @posts.length >= 1 %>
    <% for post in @posts %>
      <div class="row">
        <div class="col-sm-12 col-md-12 col-lg-12">
          <div class="thumbnail" style="background-color:black;">
            <div class="caption" style="color:white;">
                <p><span style="color:orange;"><span class="glyphicon glyphicon-picture" aria-hidden="true"></span> <%= post.image_heading %></span><br> <%= post.image_caption %></p>
                <p><a href="#" class="btn btn-default disabledTransparentButton disabled"  role="button"><span class="glyphicon glyphicon-time" aria-hidden="true"></span> Posted <%= time_ago_in_words(post.time) %> ago</a>
            </div>
            <img src="<%= post.post_image.url(:original) %>" alt="<%= post.image_caption %>">
            <div class="caption" style="color:white;">
              <%= form_for :post,  url: posts_delete_path, html: { class:"navbar-form navbar-left" } do |f| %>
                <div class="form-group">
                  <input type="hidden" name="deleteID" class="form-control" value="<%= post.id.to_s %>">
                </div>
                <button type="submit" class="btn transparentButton btn-default" >Delete Post&nbsp<span class="glyphicon glyphicon-remove" style="color:white;" aria-hidden="true"></span></button>
              <% end %>
              <%= form_for :post,  url: posts_show_path, html: { class:"navbar-form navbar-left" } do |f| %>
                <div class="form-group">
                  <input type="hidden" name="showID" class="form-control" value="<%= post.id.to_s %>">
                </div>
                <button type="submit" class="btn transparentButton btn-default" >Show Post&nbsp<span class="glyphicon glyphicon-picture" aria-hidden="true"></span></button>
              <% end %>
              <br>
              <br>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  <% else %>
    Oops, looks like you have no posts till now!
  <% end %>

</div>
